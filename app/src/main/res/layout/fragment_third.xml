<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.ThirdFragment">

    <Button
        android:id="@+id/button_login_logout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <ImageView
        android:id="@+id/imageView_login_logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/login"
        app:layout_constraintStart_toStartOf="@+id/button_login_logout"
        app:layout_constraintTop_toTopOf="@id/button_login_logout"
        app:layout_constraintBottom_toBottomOf="@id/button_login_logout"/>

    <TextView
        android:id="@+id/textView_login_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/button_login_logout"
        app:layout_constraintStart_toEndOf="@id/imageView_login_logout"
        app:layout_constraintTop_toTopOf="@id/button_login_logout" />
</androidx.constraintlayout.widget.ConstraintLayout>