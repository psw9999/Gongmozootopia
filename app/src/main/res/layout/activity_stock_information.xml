<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.StockInformationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/stockInfo_appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/stockInfo_appbar"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:contentInsetStartWithNavigation="0dp"
            app:titleTextAppearance="@style/AppBarTitleSize">
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/division_appbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/barGrayColor"
        app:layout_constraintTop_toBottomOf="@id/stockInfo_appbarLayout" />

    <TextView
        android:id="@+id/textView_stockPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="확정공모가"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/division_appbar" />

    <TextView
        android:id="@+id/textView_stockPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textView_stockPriceTitle"
        app:layout_constraintTop_toBottomOf="@id/textView_stockPriceTitle" />

    <TextView
        android:id="@+id/textView_scheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="진행일정"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_stockPrice" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/slider"
        style="@style/SeekBarwithoutSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:max="7"
        android:padding="8dp"
        android:progress="7"
        android:progressTint="@color/seekbar_color"
        android:thumb="@drawable/schedule_seekbar_thumb"
        android:tickMark="@drawable/bg_schedule_tickmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_scheduleTitle">

    </androidx.appcompat.widget.AppCompatSeekBar>


    <LinearLayout
        android:id="@+id/seekbar_linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_forecastDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:text="수요예측\n[02.02]"
            android:textSize="13dp"
            android:textStyle="normal" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_ipoDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="청약\n[02.03]"
            android:textSize="13dp"
            android:textStyle="normal" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_refundDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="환불\n[02.24]"
            android:textSize="13dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView_debutDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="상장\n[02.23]"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:id="@+id/division_stockInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/seekbar_color"
        app:layout_constraintBottom_toTopOf="@id/stockInfo_tabLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/stockInfo_tabLayout"
        style="@style/MainTabTheme"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekbar_linearLayout">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2_stockInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stockInfo_tabLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </androidx.viewpager2.widget.ViewPager2>f

</androidx.constraintlayout.widget.ConstraintLayout>