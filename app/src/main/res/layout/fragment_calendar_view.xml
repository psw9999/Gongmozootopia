<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_calendar_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/millis"
        app:layout_constraintBottom_toBottomOf="@id/millis"
        app:layout_constraintStart_toStartOf="parent"
        ></ImageView>

    <TextView
        android:id="@+id/millis"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_calendar_left"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView_calendar_right"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_chevron_right_24"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@+id/millis"
        app:layout_constraintBottom_toBottomOf="@id/millis"
        app:layout_constraintStart_toEndOf="@+id/millis"
        ></ImageView>

        <LinearLayout
            android:id="@+id/LinearLayout_week"
            android:layout_width="0dp"
            android:weightSum="100"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/millis"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="일"
                android:textColor="#C80000" />
            <TextView
                android:id="@+id/textView_monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="center"
                android:text="월" />
            <TextView
                android:id="@+id/textView_tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="center"
                android:text="화" />
            <TextView
                android:id="@+id/textView_wendnesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="center"
                android:text="수" />
            <TextView
                android:id="@+id/textView_thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="center"
                android:text="목" />
            <TextView
                android:id="@+id/textView_friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="center"
                android:text="금" />

            <TextView
                android:id="@+id/textView_saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="토"
                android:textColor="#2196F3" />
        </LinearLayout>

    <com.psw9999.gongmozootopia.CustomView.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout_week" />

</androidx.constraintlayout.widget.ConstraintLayout>