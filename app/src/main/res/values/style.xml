
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorSecondary">@color/mainColor</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppBarTitleSize" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Chip_Unregistered_StockFirm_TextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/chip_underwriter</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Chip_Registered_StockFirm_TextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="chip_underwriter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name = "chipBackgroundColor">@color/bg_color_chip_state</item>
    </style>

    <style name="chip_background" parent="Widget.MaterialComponents.Chip.Action">
        <item name="backgroundColor">@color/white</item>
    </style>


    <style name="StockInfo"/>
    <style name="StockInfo.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StockInfo.secondTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="StockInfo.content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StockInfo.cardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Calendar"/>
        <style name="Calendar.HeaderDateText">
            <item name="android:textSize">20dp</item>
            <item name="android:textColor">#263238</item>
        </style>

        <style name="Calendar.CalendarViewStyle">
            <item name="dayHeight">80dp</item>
        </style>

        <style name="Calendar.ItemViewStyle">
            <item name="dayTextSize">12dp</item>
        </style>

        <style name="Calendar.HeadTextView" parent="Widget.MaterialComponents.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">22dp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textAlignment">center</item>
        </style>

        <style name="Calendar.WeekItem" parent="Widget.MaterialComponents.TextView">
            <item name="android:textStyle">bold</item>
            <item name="android:textAlignment">center</item>
        </style>

        <style name="Calendar.WeekItem.WeekDay" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="Calendar.WeekItem.Saturday" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/calendar_saturday</item>
        </style>

        <style name="Calendar.WeekItem.SunDay" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/calendar_sunday</item>
        </style>

        <style name="Calendar.FilterChip" parent="Widget.MaterialComponents.Chip.Action">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">20dp</item>
            <item name="android:checkable">true</item>
            <item name="checkedIcon">@drawable/ic_baseline_check_24</item>
            <item name="chipBackgroundColor">@color/white</item>
            <item name="rippleColor">@color/white</item>
            <item name="ensureMinTouchTargetSize">false</item>
            <item name="chipIcon">@drawable/bg_circle_24</item>
            <item name="chipIconSize">15dp</item>
            <item name="android:checked">true</item>
        </style>
    <style name="Configuration"/>

        <style name="Configuration.Title" parent="TextAppearance.AppCompat">
            <item name="android:textSize">14dp</item>
            <item name="android:textColor">@color/configuration_head</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginStart">20dp</item>
        </style>

        <style name="Configuration.SecondTitle" parent="TextAppearance.AppCompat">
            <item name="android:textSize">16dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">15dp</item>
            <item name="android:layout_marginStart">20dp</item>
        </style>

</resources>