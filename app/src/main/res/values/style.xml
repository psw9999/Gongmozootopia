
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="elevation">0dp</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorSecondary">#8C8C8C</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Main Tab theme -->
    <style name="MainTabTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textColorPrimary">#000000</item>
        <item name="tabIndicatorColor">#F40000</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppBarTitleSize" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Chip_Unregistered_StockFirm_TextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/chip_underwriter</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Chip_Registered_StockFirm_TextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="chip_underwriter" parent="Widget.MaterialComponents.Chip.Action">
        <item name="closeIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeColor">@color/chip_underwriter</item>
        <item name="chipStrokeWidth">1.5dp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipMinHeight">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="chip_background" parent="Widget.MaterialComponents.Chip.Action">
        <item name="backgroundColor">@color/white</item>
    </style>


    <style name="StockInfo"/>
    <style name="StockInfo.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StockInfo.secondTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/baseColor</item>
    </style>

    <style name="StockInfo.content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StockInfo.underwriter" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/chip_underwriter</item>
        <item name="android:background">@drawable/bg_textview_register_underwriter</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Calendar"/>
        <style name="Calendar.HeaderDateText">
            <item name="android:textSize">20dp</item>
            <item name="android:textColor">#263238</item>
        </style>

        <style name="Calendar.CalendarViewStyle">
            <item name="dayHeight">80dp</item>
        </style>

        <style name="Calendar.ItemViewStyle">
            <item name="dayTextSize">12dp</item>
        </style>

        <style name="Calendar.HeadTextView" parent="Widget.MaterialComponents.TextView">
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">20dp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textAlignment">center</item>
        </style>

        <style name="Calendar.WeekItem" parent="Widget.MaterialComponents.TextView">
            <item name="android:textStyle">bold</item>
            <item name="android:textAlignment">center</item>
        </style>

        <style name="Calendar.WeekItem.WeekDay" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="Calendar.WeekItem.Saturday" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/calendar_saturday</item>
        </style>

        <style name="Calendar.WeekItem.SunDay" parent="Calendar.WeekItem">
            <item name="android:textColor">@color/calendar_sunday</item>
        </style>

    <style name="Configuration"/>

        <style name="Configuration.Title" parent="TextAppearance.AppCompat">
            <item name="android:textSize">16dp</item>
            <item name="android:textColor">@color/configuration_head</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginStart">20dp</item>
        </style>

        <style name="Configuration.SecondTitle" parent="TextAppearance.AppCompat">
            <item name="android:textSize">18dp</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginTop">15dp</item>
            <item name="android:layout_marginStart">20dp</item>
        </style>

</resources>